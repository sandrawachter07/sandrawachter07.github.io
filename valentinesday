    <!-- Popup -->
    <div class="popup-overlay" id="popup">
        <div class="popup-content">
            <h2>Yaaay! üéâ</h2>
            <div class="hearts">üíïüíñüíï</div>
            <p>Juhuu. Du hast ja gesagt ü•∞ </p>
            <p>Du bist die Liebe meines Lebens üíï</p>
            <button class="close-btn" onclick="closePopup()">üíï Schlie√üen</button>
        </div>
    </div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const popup = document.getElementById('popup');
        
        // Position the No button initially
        function initNoButton() {
            const container = document.querySelector('.buttons');
            const rect = container.getBoundingClientRect();
            noBtn.style.left = (rect.left + rect.width / 2 + 50) + 'px';
            noBtn.style.top = rect.top + 'px';
        }
        
        // Make the No button flee
        function fleeButton() {
            const maxX = window.innerWidth - noBtn.offsetWidth - 20;
            const maxY = window.innerHeight - noBtn.offsetHeight - 20;
            
            let newX, newY;
            let attempts = 0;
            
            // Try to find a position that's not too close to current position
            do {
                newX = Math.random() * maxX + 10;
                newY = Math.random() * maxY + 10;
                attempts++;
            } while (
                attempts < 10 && 
                Math.abs(newX - noBtn.offsetLeft) < 100 && 
                Math.abs(newY - noBtn.offsetTop) < 100
            );
            
            noBtn.style.left = newX + 'px';
            noBtn.style.top = newY + 'px';
            noBtn.style.transition = 'all 0.3s ease-out';
        }
        
        // Event listeners for the No button
        noBtn.addEventListener('mouseenter', fleeButton);
        noBtn.addEventListener('touchstart', fleeButton);
        noBtn.addEventListener('focus', fleeButton);
        
        // Popup functions
        function showPopup() {
            popup.classList.add('show');
        }
        
        function closePopup() {
            popup.classList.remove('show');
        }
        
        // Close popup when clicking outside
        popup.addEventListener('click', (e) => {
            if (e.target === popup) {
                closePopup();
            }
        });
        
        // Create floating hearts
        function createFloatingHearts() {
            const container = document.getElementById('floatingHearts');
            const hearts = ['üíï', 'üíñ', 'üíó', 'üíì', 'üíù', '‚ù§Ô∏è'];
            
            for (let i = 0; i < 15; i++) {
                const heart = document.createElement('span');
                heart.className = 'floating-heart';
                heart.textContent = hearts[Math.floor(Math.random() * hearts.length)];
                heart.style.left = Math.random() * 100 + '%';
                heart.style.animationDelay = Math.random() * 6 + 's';
                heart.style.animationDuration = (4 + Math.random() * 4) + 's';
                container.appendChild(heart);
            }
        }
        
        // Initialize
        window.addEventListener('load', () => {
            initNoButton();
            createFloatingHearts();
        });
        
        window.addEventListener('resize', initNoButton);
    </script>
</body>
